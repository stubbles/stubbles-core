{
    "name": "stubbles/core",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Provides base classes for Stubbles packages.",
    "require": {
        "php": ">=5.6.0",
        "ext-iconv": "*"
    },
    "require-dev": {
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^5.1",
        "bovigo/callmap": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\": "src/main/php"
        },
        "files": ["src/main/php/lang/functions.php",
                  "src/main/php/lang/reflect/functions.php",
                  "src/main/php/peer/functions.php",
                  "src/main/php/streams/functions.php"
                 ]
    },
    "autoload-dev": {
        "psr-4": {
            "stubbles\\test\\": "src/test/helper"
        },
        "files": [
            "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php",
            "src/test/helper/functions.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "7.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
